{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/api",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "strictFunctionTypes": false,
    "noStrictGenericChecks": true
  },
  "include": ["../src/api/**/*", "../src/utils/**/*"]
} 